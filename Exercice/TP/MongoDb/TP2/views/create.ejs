<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>Créer une équipe</title>
</head>

<body>
    <p><strong>Note :</strong> Cette page est accessible uniquement aux administrateurs.</p>

    <h1>Créer une nouvelle équipe</h1>

    <% if (flashError && flashError.length> 0) { %>
        <div class="error">
            <% flashError.forEach(msg=> { %>
                <p>
                    <%= msg %>
                </p>
                <% }); %>
        </div>
        <% } %>

            <% if (flashSuccess && flashSuccess.length> 0) { %>
                <div class="success">
                    <% flashSuccess.forEach(msg=> { %>
                        <p>
                            <%= msg %>
                        </p>
                        <% }); %>
                </div>
                <% } %>

                    <form action="/teams/create" method="POST">
                        <div>
                            <label for="name">Nom de l’équipe :</label>
                            <input type="text" id="name" name="name" required minlength="4">
                        </div>

                        <div>
                            <label for="members">Membres de l’équipe :</label><br>
                            <select id="members" name="members" multiple size="5" required>
                                <% if (users && users.length> 0) { %>
                                    <% users.forEach(user=> { %>
                                        <option value="<%= user._id %>">
                                            <%= user.username %> (<%= user.email %>)
                                        </option>
                                        <% }); %>
                                            <% } else { %>
                                                <option disabled>Aucun utilisateur disponible</option>
                                                <% } %>
                            </select>
                            <p style="font-size: 0.9em;">(Maintenir Ctrl ou Cmd pour sélectionner plusieurs)</p>
                        </div>

                        <div>
                            <button type="submit">Créer l’équipe</button>
                        </div>
                    </form>

                    <p><a href="/">Retour à l’accueil</a></p>
</body>

</html>